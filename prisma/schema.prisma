generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TipoCert {
  A1
  A3
}

enum SubtipoA3 {
  COM_TOKEN
  SEM_TOKEN
}

enum Criador {
  FRANK_GIOVANNI_LOPES
  MATHEUS_CARDOSO_SOARES
}

model User {
  id        String   @id @default(cuid())
  cpf       String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
}

model Pedido {
  id            String   @id @default(cuid())
  empresa       String
  representante String
  tipo          TipoCert
  subtipoA3     SubtipoA3?
  doc           String
  isCNPJ        Boolean
  valorTotal    Decimal  @db.Decimal(12, 2)
  valorRecebido Decimal  @db.Decimal(12, 2)
  criador       Criador
  createdAt     DateTime @default(now())
}

model Report {
  id        String   @id @default(cuid())
  title     String
  mime      String
  periodIni DateTime
  periodFim DateTime
  file      Bytes
  createdAt DateTime @default(now())
  createdBy String
}